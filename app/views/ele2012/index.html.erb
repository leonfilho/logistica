<div class="block">
	<div class="content"> 
		<div class="content-header" style="min-height: 30px">
		   <h3>Logística de Urnas Eletrônicas</h3>
		</div>
		<div class="inner">
		   <table id="hor-zebra" class="zonas">
		      <thead>
   		      <tr>
	   	         <th scope="col" colspan="4" class="divide" >Cadastro</th>
  	   	         <th scope="col" colspan="2" class="divide" >Eleição 2010</th>
  	   	         <th scope="col" colspan="2">UEs (+25%)</th>
	   	      </tr>
		         <tr>
		            <th scope="col">Zona</th>
		            <th scope="col">Município</th>
		            <th scope="col">Locais</th>
		            <th scope="col" class="divide" >Seções</th>
		            <th scope="col">Agregas</th>
		            <th scope="col" class="divide" >MRJ</th>
		            <th scope="col">de Seção</th>
		            <th scope="col">de Reserva</th>
		         </tr>
            </thead>
            <tbody>
            
		      <% @zonas.each_with_index do |zona, indice_zona| %>
		         <tr <% if indice_zona % 2 == 0 %>class="odd"<% end %> >
		            <td class="ultimo" rowspan='<%= "#{zona.cities.length}" %>' >
		               <strong><%= zona.numero_bonito %></strong>
		            </td>

      	         <% zona.municipios.each_with_index do |municipio, index| %>
                      
                        <% sede = index == 0? 'sede ': '' %>
                        <% ultimo = index == zona.cities.size-1? 'ultimo ': '' %>

		                  <td class="<%= ultimo+sede %>" >
                           <%= municipio.nome %> (<%= municipio.numero %>)
         		         </td>
         		         
         		         <td class="<%= ultimo %>" >
         		            <%= (locais = Place.por_zona_municipio(zona.numero, municipio.numero).ativos).size %>
         		            <% @total_locais += locais.size %>
         		         </td>
         		         
         		         <td class="divide <%= ultimo %>" >
                           <%= numero_secoes(zona,municipio) %>
         		         </td>
         		         
         		         <td class="<%= ultimo %>" >
                           <%= numero_agregacoes_efetivas(zona,municipio) %>
         		         </td>
         		         
         		         <td class="divide <%= ultimo %>" >
         		            <%= numero_mrjs(zona,municipio) %>
         		         </td>

         		         <td class="<%= ultimo %>" >
         		            <%= numero_urnas_de_secao %>
         		         </td>
         		         
           		         <td class="<%= ultimo %>" >
         		            <%= numero_urnas_de_contingencia %>
         		         </td>

        		            <% if index != zona.cities.size-1 %>
           		            </tr>
           		            <tr <%= "class='odd'" if indice_zona%2==0 %> >
        		            <% end %>

           		   <% end %>
		         </tr>
		      <% end %>

		         <tr>
		            <td>Total</td>
		            <td><%= @total_municipios %></td>
		            <td><%= @total_locais %></td>
		            <td><%= @total_secoes %></td>
     		         <td><%= @total_agregacoes %></td>
     		         <td><%= @total_mrjs %></td>
     		         <td colspan="2"><%= @total_urnas_de_secao + @total_urnas_de_contingencia %></td>
		         </tr>
            </tbody>
         </table>
		</div>
   </div>
</div>
