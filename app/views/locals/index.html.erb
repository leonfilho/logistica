<h1>Listing locals</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Numero</th>
    <th>City</th>
    <th>Zone</th>
    <th>Detail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.nome %></td>
    <td><%= local.numero %></td>
    <td><%= local.city_id %></td>
    <td><%= local.zone_id %></td>
    <td><%= local.detail_id %></td>
    <td><%= link_to 'Show', local %></td>
    <td><%= link_to 'Edit', edit_local_path(local) %></td>
    <td><%= link_to 'Destroy', local, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

