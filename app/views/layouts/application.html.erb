<!DOCTYPE html>
<html>
<head>
  <title><%= t("application_name", :default => "Organizer") %></title>

  <%= javascript_include_tag "application" %>

  <%= stylesheet_link_tag 'application', :media => "all" %>


  <%= stylesheet_link_tag 'fullcalendar/fullcalendar.print', :media => "print" %>

  <script type="text/javascript">
	<!--
<%= yield :javascript %>	-->
  </script>

  <%= csrf_meta_tag %>
  
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/"><%= t("application_name", :default => "Organizer") %></a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
		  <li><%= link_to t("application.preferences", :default => "Preferences"), preferences_path %></li>
		  <li><%= link_to t("application.logout", :default => "Logout"), logout_path %></li>
        </ul>
      </div><br />
      <div id="main-navigation">
        <ul class="wat-cf">
			<%= main_navigation %>
        </ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p class="gray_small">Copyright &copy; <%= Time.now.year %></p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
