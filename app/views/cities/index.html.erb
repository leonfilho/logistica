<h1>Listando Municípios do Mato Grosso</h1>

<table>
  <tr>
    <th>#</th>
    <th>Nome</th>
    <th>Número TSE</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each_with_index do |city,index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= city.nome %></td>
    <td><%= city.numero %></td>
    <td><%= link_to 'Mostrar', city %></td>
  </tr>
<% end %>
</table>

