         <%= form_for @eleicao,
            :url => {:action => "distribuicao_me" },
            :html => {:id => "distribuicao_me_html" },
			   :remote => true,
			   
	          do |ele| %>
	            <%= ele.hidden_field :id, {:value => @eleicao_escolhida.id} %>
