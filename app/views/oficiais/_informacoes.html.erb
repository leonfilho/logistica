<div id="informacoes">

	<% if @eleicao_escolhida %>
   	<h3><%= @eleicao_escolhida.nome %></h3>
      <p><strong>Data:</strong> <%= l @eleicao_escolhida.data, :format => :extenso %></p>
      
      <hr style="clear: both" />
      
      <span style="float: left; clear: none;" >Distribuição de Urnas Eletrônicas:</span>
      <div class="botoes">
         <%= form_for @eleicao,
            :url => {:action => "distribuicao_ue" },
            :html => {:id => "distribuicao_ue_html" },
			   :remote => true, 
			
	          do |ele| %>
	            <%= ele.hidden_field :id, {:value => @eleicao_escolhida.id} %>
               <%= ele.submit "Gerar", { :id => "ue_html", :class => "ui-button" } %>
         <% end %>
      </div>

      <br style="clear: both;" />
      <br style="clear: both;" />

      <span style="float: left; clear: none;" >Distribuição de Técnicos de Urna:</span>
      <div class="botoes">
         <%= form_for @eleicao,
            :url => {:action => "distribuicao_tu" },
            :html => {:id => "distribuicao_tu_html" },
			   :remote => true,
			   
	          do |ele| %>
	            <%= ele.hidden_field :id, {:value => @eleicao_escolhida.id} %>
               <%= ele.submit "Gerar", { :id => "tu_html", :class => "ui-button" } %>
